---
const { position, place, duration, description } = Astro.props;
---

<card>
    <div class="carta-box w-72 md:w-96 h-64 justify-center">
        <div class="carta ">
            <div class="cara bg-AzulClaro p-5 w-72 md:w-96 h-64 rounded-md">
                <h1 class="text-xl md:text-2xl text-AzulOscuro font-black p-2 md:whitespace-nowrap">
                    {position}
                </h1>
                <h2 class="text-lg md:text-xl text-AzulOscuro p-2">
                    {place}
                </h2>
                <h3 class="text-base md:text-lg text-AzulBrillante p-2">
                    {duration}
                </h3>
            </div>
            <div class="cara detras bg-AzulOscuro p-5 w-72 md:w-96 h-64 rounded-md">
                <p class="text-justify text-sm md:text-base text-AzulClaro">
                    {description}
                </p>
            </div>
        </div>
    </div>
</card>

<style>
    .carta-box {
        position: relative;
        perspective: 1000px;
    }

    .carta-box:hover .carta {
        transform: rotateY(180deg);
    }

    .carta {
        transform-style: preserve-3d;
        transition: all 0.5s linear;
    }

    .cara {
        position: absolute;
        backface-visibility: hidden;
    }

    .cara.detras {
        transform: rotateY(180deg);
    }
</style>